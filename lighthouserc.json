{
  "ci": {
    "collect": {
      "numberOfRuns": 1,
      "startServerCommand": "npm run start -- --port=3000",
      "startServerReadyPattern": "Local",
      "url": ["http://localhost:3000"],
      "settings": {
        "preset": "perf"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.9 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouse"
    }
  }
}
